model Product {
  id          Int       @id @default(autoincrement())
  name        String
  description String
  price       Float
  stock       Int       
  category    Category @default(Shirt)
  image       String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  Order Order[]

  OrderItem OrderItem[]
}

enum Category {
  Shirt
  Hose
  Shoe
}
